<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/CampaignManager</base>
  <class>CampaignTree</class>
  <name>civicrm_campaign_tree</name>
  <comment>Campaign Tree</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique CampaignTree ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>campaign_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Campaign ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>campaign_id</name>
    <table>civicrm_campaign</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>path</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Tree Node path</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>depth</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Tree Node depth</comment>
    <html>
      <type>Number</type>
    </html>
  </field>

</table>
